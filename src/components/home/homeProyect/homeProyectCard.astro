---
import { HiArrowRight } from "react-icons/hi";

export interface Props {
  titulo: string;
  imagen: string;
  tecnologias: string[];
  demo: string;
  codigo: string;
}

const { titulo, imagen, tecnologias, demo, codigo } = Astro.props;
---

<div
  class="group flex w-full max-w-md mx-auto flex-col overflow-hidden rounded-xl bg-[#1e293b] border border-[#38bdf8]/10 transition-all duration-300 hover:scale-[1.02] hover:border-[#38bdf8]/30"
>
  <img
    src={imagen}
    alt={`Project: ${titulo}`}
    class="h-52 p-3 w-full object-cover rounded-2xl"
    loading="lazy"
  />

  <div class="flex flex-col grow p-4">
    <h3 class="text-lg font-semibold mb-2 text-white">{titulo}</h3>

    <div class="flex flex-wrap gap-2 mb-4">
      {
        tecnologias.map((tech) => (
          <span class="rounded-md bg-[#1e293b]/20 text-[#38bdf8] px-2 py-0.5 text-xs font-semibold">
            {tech}
          </span>
        ))
      }
    </div>

    <div class="mt-auto flex justify-between gap-3">
      <a
        href={demo}
        target="_blank"
        rel="noopener noreferrer"
        class="w-full text-center border border-[#38bdf8]/50 text-[#38bdf8] py-2 rounded-lg text-sm font-semibold hover:bg-[#38bdf8] hover:text-[#0f172a] transition-all duration-300"
      >
        Demo
      </a>

      <a
        href={codigo}
        target="_blank"
        rel="noopener noreferrer"
        class="w-full text-center border border-[#38bdf8]/50 text-[#38bdf8] py-2 rounded-lg text-sm font-semibold hover:bg-[#38bdf8] hover:text-[#0f172a] transition-all duration-300"
      >
        Code
      </a>
    </div>
  </div>
</div>
