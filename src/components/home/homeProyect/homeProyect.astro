---
import HomeProjectCard from "./homeProyectCard.astro";
import { proyectos } from "../../../data/projetsAboutData.js";
---

<section class="py-10 relative z-10">
  <h2
    class="text-3xl md:text-4xl font-bold text-white mb-12 mx-auto px-6 text-center"
  >
    Featured <span class="text-[#998542]">Projects</span>
  </h2>

  <div class="mt-8 grid gap-6 md:grid-cols-2 max-w-[930px] mx-auto px-4">
    {proyectos.map((p) => <HomeProjectCard {...p} />)}
  </div>
  <div class="mt-12 flex justify-center">
    <a
      href="/proyectos"
      class="px-8 py-4 bg-[#500000] hover:bg-[#732d2d] text-white font-semibold rounded-xl transition-all duration-300
           shadow-lg shadow-[#500000]/20 hover:shadow-[#500000]/40 hover:scale-105 active:scale-95"
    >
      View All Projects
    </a>
  </div>
</section>
