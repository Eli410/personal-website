---
import SocialIcons from "../socialIcons/socialIcons.jsx";
---

<footer class="bg-[#0f172a] text-white border-t border-[#38bdf8]/10">
  <div
    class="container mx-auto flex flex-col items-center justify-between px-6 py-12 lg:flex-row lg:px-20"
  >
    <!-- Logo -->
    <a href="/" class="flex items-center">
      <h3
        class="text-[#38bdf8] text-4xl font-bold"
      >
        EC
      </h3>
    </a>

    <!-- Navigation Links -->
    <nav class="mb-4 lg:mb-0">
      <ul
        class="flex flex-col items-center space-y-2 text-zinc-400 lg:flex-row lg:items-start lg:space-y-0 lg:space-x-6"
      >
        <li>
          <a href="/" class="hover:text-[#38bdf8] font-medium transition-colors">Home</a>
        </li>
        <li>
          <a href="/proyectos" class="hover:text-[#38bdf8] font-medium transition-colors">Projects</a>
        </li>
        <li>
          <a href="/about" class="hover:text-[#38bdf8] font-medium transition-colors">About</a>
        </li>
        <li>
          <a href="/contact" class="hover:text-[#38bdf8] font-medium transition-colors">Contact</a>
        </li>
      </ul>
    </nav>

    <!-- Social Media Links -->
    <div class="flex space-x-4">
      <SocialIcons client:visible />
    </div>
  </div>

  <!-- Copyright -->
  <div
    class="w-full border-t border-[#38bdf8]/10 py-8 text-center text-sm text-zinc-500"
  >
    <p>ziyangc410@gmail.com</p>
    <p class="mt-2">&copy; {new Date().getFullYear()} Eli Chen. Built with Astro.</p>
  </div>
</footer>
