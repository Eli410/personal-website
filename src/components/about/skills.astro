<section class="site-container mt-14 mx-auto max-w-6xl px-4">
  <div class="site-container mt-14">
    <h2
      class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-start"
    >
      <span class="text-[#38bdf8]">Technologies</span>
      <span
        class="hidden h-1 grow rounded-lg bg-gradient-to-r from-[#1e293b] to-[#38bdf8]/30 md:block"
      ></span>
    </h2>
  </div>
  <div class="mt-10 grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 gap-3">
    {
      [
        { name: "Python", icon: "python" },
        { name: "Java", icon: "java" },
        { name: "C++", icon: "cplusplus" },
        { name: "SQL", icon: "mysql" },
        { name: "JavaScript", icon: "javascript" },
        { name: "React", icon: "react" },
        { name: "Astro", icon: "astro", src: "/svg/astro.svg" },
        { name: "Azure", icon: "azure" },
      ].map((skill) => (
        <div class="flex flex-col items-center bg-[#1e293b] border border-[#38bdf8]/10 p-2.5 rounded-lg shadow-md">
          <img
            src={skill.src ?? `https://cdn.jsdelivr.net/gh/devicons/devicon/icons/${skill.icon}/${skill.icon}-original.svg`}
            alt={skill.name}
            class="w-8 h-8"
            {...(skill.src ? {} : { onerror: `this.onerror=null; this.src='https://cdn.jsdelivr.net/gh/devicons/devicon/icons/${skill.icon}/${skill.icon}-plain.svg'` })}
          />
          <p class="mt-1 text-white text-sm font-semibold">{skill.name}</p>
        </div>
      ))
    }
  </div>
</section>
