---
import Layout from "../layouts/Layout.astro";
import Header from "../components/home/header/header.astro";
import Experience from "../components/about/experience.astro";
import Skills from "../components/about/skills.astro";
import AboutMe from "../components/about/aboutMe.astro";
import ContactForm from "../components/links/copyMail.jsx";
import SocialIcons from "../components/commons/socialIcons/socialIcons.jsx";
import Footer from "../components/commons/footer/footer.astro";
---

<Layout>
  <Header />
  <Experience />
  <Skills />
  <AboutMe />

  <!-- Contact section (same content as contact page) -->
  <section
    id="contact"
    class="site-container experience mt-16 mx-auto max-w-6xl px-4 bg-transparent"
  >
    <h2
      class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-[#38bdf8] md:flex-row md:items-center md:text-start"
    >
      <span>Get in touch</span>
      <span
        class="hidden h-1 grow rounded-lg bg-gradient-to-r from-[#1e293b] to-[#38bdf8]/30 md:block"
      ></span>
    </h2>

    <div class="flex flex-col items-center justify-center py-12 md:py-16">
      <ContactForm client:visible />

      <SocialIcons client:visible />
    </div>
  </section>

  <Footer />
</Layout>
