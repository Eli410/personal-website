---
import Layout from "../layouts/Layout.astro";
import CopyMail from "../components/links/copyMail.jsx";

const links = [
  {
    href: "https://www.linkedin.com/in/Eli-chen",
    label: "LinkedIn",
  },
  { href: "https://github.com/Eli410", label: "GitHub" },
  { href: "mailto:ziyangc410@gmail.com", label: "Email" },
];
---

<Layout title="Contact" description="Get in touch with Eli Chen">
  <section
    class="bg-[#0f172a] flex min-h-screen flex-col items-center justify-center px-6"
  >
    <div class="mb-2 mt-11">
      <div class="relative flex items-center justify-center">
        <!-- Profile placeholder with initials -->
        <div class="h-32 w-32 rounded-full bg-[#1e293b] border border-[#38bdf8]/20 flex items-center justify-center">
          <span class="text-3xl font-bold text-[#38bdf8]">EC</span>
        </div>
      </div>
    </div>

    <CopyMail client:visible />

    <!-- Links list -->
    <div class="w-full max-w-xs space-y-4">
      {
        links.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="block font-semibold w-full rounded-xl bg-[#1e293b] hover:bg-[#334155] px-6 py-4 text-center text-white transition-all duration-300 shadow-lg shadow-[#1e293b]/20 hover:shadow-[#1e293b]/40 hover:scale-[1.02]"
          >
            {link.label}
          </a>
        ))
      }
    </div>

    <!-- Additional info -->
    <div class="mt-12 text-center max-w-md">
      <p class="text-zinc-400 text-sm leading-relaxed">
        I'm currently based in <span class="text-[#38bdf8]">Katy, TX</span> and available for 
        full-time opportunities and interesting projects.
      </p>
      <p class="text-zinc-500 text-sm mt-2">
        No sponsorship required to work in the US.
      </p>
    </div>
  </section>
</Layout>

